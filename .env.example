# Knee MRI Pipeline Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=true
MAX_UPLOAD_SIZE_MB=600
RESULTS_EXPIRY_HOURS=24

# =============================================================================
# Data Directories
# =============================================================================
# For DEVELOPMENT (local testing):
UPLOAD_DIR=./data/uploads
TEMP_DIR=./data/temp
LOG_DIR=./data/logs
RESULTS_DIR=./data/results

# For PRODUCTION (mounted disk):
# UPLOAD_DIR=/mnt/data/knee_pipeline_data/uploads
# TEMP_DIR=/mnt/data/knee_pipeline_data/temp
# LOG_DIR=/mnt/data/knee_pipeline_data/logs
# RESULTS_DIR=/mnt/data/knee_pipeline_data/results
